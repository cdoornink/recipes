<a class='back-button' style="cursor:pointer" {{action 'back'}}>
  <div class="icon-arrow-left2"></div>
</a>
<div class="shopping-list">
  <div class="header">
    My Grocery List
  </div>
  {{#if model.groups}}
  <div class="menu">
    <div class="menu-header">
      Menu
    </div>
    {{#each list.menu as |item i|}}
      {{#if i}}
        <div class="menu-item">
          {{i}}: {{item.title}}
        </div>
      {{/if}}
    {{/each}}
  </div>
  {{/if}}
  <div>
    {{menu-aisle name="Produce" items=list.produce checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Bulk" items=list.bulk checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Specialty" items=list.specialty checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Bread" items=list.bread checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Snacks" items=list.snacks checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Meat" items=list.meat checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Dairy" items=list.dairy checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Cheese" items=list.cheese checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Freezer" items=list.freezer checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Baking" items=list.baking checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Pasta" items=list.pasta checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Beans" items=list.beans checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Soup" items=list.soup checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Cleaning" items=list.cleaning checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Babies" items=list.babies checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Personal" items=list.personal checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Medicine" items=list.medicine checkListItemClick='checkListItemClick'}}
    {{menu-aisle name="Other" items=list.staples checkListItemClick='checkListItemClick'}}
  </div>
  {{#if emptyList}}
    <div class="empty-message">This list is empty :(</div>
    <div class="empty-message">Use the plus button below to add items.</div>
  {{else}}
    <div class="complete-button" {{action 'confirmListComplete'}}>
      Finished Shopping
    </div>
  {{/if}}
</div>
